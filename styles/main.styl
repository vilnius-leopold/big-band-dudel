@import "bootstrap.min.css"

#popup-overlay{
	position: fixed;
	width: 100%;
	height: 100%;
	background: rgba(255,255,255,0.7);
	top: 0;
	left: 0;
}

#popup-container{
	background: white;
	border: 1px solid #ddd;
	width: 400px;
	height: 300px;
	margin: 0 auto;
	padding: 30px;
	box-shadow: 0 4px 12px 0 rgba(0,0,0,0.3);
	position: relative;
	top: 50%;
	margin-top: -150px;
}

#popup-close-button:hover {
	opacity: 1;
}
#popup-close-button {
	opacity: 0.5;
	font-size: 20px;
	padding: 2px;
	background: white;
	border: none;
	box-shadow: none;
	outline: none;
	position: absolute;
	top: 4px;
	right: 8px;
}

.status-item {
	text-align: center;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
}

.remove-button{
	opacity: 0.5;
	cursor: pointer;
}

.remove-button:hover{
	opacity: 1;
}

sidebar-width   = 200px
header-height   = 100px
musician-height = 40px
event-width     = 140px
main-width      = 800px
main-height     = 500px
item-padding    = 10px

#event-table
	position: relative
	border: 1px solid #ddd
	overflow: hidden
	height: 100%
	width: 100%

	// >div
	// >div>div
	// >div>div>div
	// >div>div>div>div
	// 	border: 1px solid #ddd

	#table-corner
		position: absolute
		top: 0
		left: 0
		width: sidebar-width
		height: header-height
		background: white
		z-index: 500
		border-right: 3px solid #ddd;
		border-bottom: 3px solid #ddd;

	#event-header
		z-index: 400
		padding-left: sidebar-width
		position: absolute
		left: 0
		top: 0
		// width: 5000px
		height: header-height
		background: white
		white-space: nowrap;
		// overflow-x:auto;
		// overflow-y:hidden;
		// padding-right: 20px
		// box-shadow: 0px 0px 8px -2px rgba(0, 0, 0, 0.3);

		.event-item
			width: event-width
			display: inline-block;
			white-space: initial;
			height: header-height;
			vertical-align: top;
			overflow:hidden
			border-right: 1px solid #ddd;
			border-bottom: 3px solid #ddd;

	#musician-sidebar
		z-index: 400
		padding-top: header-height
		position: absolute
		left: 0
		top: 0
		background: white
		width: sidebar-width
		// padding-bottom: 20px
		// box-shadow: 0px 0px 8px -2px rgba(0, 0, 0, 0.3);

		.musician-item
			height: musician-height
			overflow: hidden;
			border-right: 3px solid #ddd;
			border-bottom: 1px solid #ddd;
			padding: 9px 15px;
			white-space: nowrap;

	#table-content-wrapper
		position: absolute
		top: 0
		left: 0
		padding-left: 200px
		padding-top:  100px
		width: 100%
		height: 100%

		#table-scroll-pane
			width: 100%
			height: 100%
			// overflow: scroll
			overflow-y: scroll
			overflow-x: auto

			#table-content
				// width: 1200px
				white-space: nowrap;
				// overflow-x:auto;
				// overflow-y:hidden;

				.status-column
					display: inline-block;
					width: event-width

					.status-item
						height: musician-height
						width: event-width
						overflow:hidden
						border-right: 1px solid #ddd;
						border-bottom: 1px solid #ddd;

