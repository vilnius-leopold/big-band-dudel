@import "bootstrap.min.css"

#popup-overlay{
	position: fixed;
	width: 100%;
	height: 100%;
	background: rgba(255,255,255,0.7);
	top: 0;
	left: 0;
}

#popup-container{
	background: white;
	border: 1px solid #ddd;
	width: 400px;
	height: 300px;
	margin: 0 auto;
	padding: 30px;
	box-shadow: 0 4px 12px 0 rgba(0,0,0,0.3);
	position: relative;
	top: 50%;
	margin-top: -150px;
}

#popup-close-button:hover {
	opacity: 1;
}
#popup-close-button {
	opacity: 0.5;
	font-size: 20px;
	padding: 2px;
	background: white;
	border: none;
	box-shadow: none;
	outline: none;
	position: absolute;
	top: 4px;
	right: 8px;
}

.status-item {
	text-align: center;
	-webkit-user-select: none;
	-moz-user-select: none;
	-ms-user-select: none;
	user-select: none;
}

.remove-button{
	opacity: 0.5;
	cursor: pointer;
}

.remove-button:hover{
	opacity: 1;
}